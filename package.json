{
  "name": "@seniorsistemas/senior-platform-apps",
  "version": "0.0.1",
  "description": "Lib para utilização da api de aplicativos da plataforma da Senior Sistemas.",
  "main": "./dist/index.js",
  "scripts": {
    "build": "del-cli dist && tsc",
    "prepublishOnly": "npm run build",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "start": "npm run build && node examples/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-senior-com-br/senior-platform-apps-node.git"
  },
  "keywords": [
    "senior",
    "api",
    "app",
    "node",
    "bpm"
  ],
  "author": "Wallace.Reetz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dev-senior-com-br/senior-platform-apps-node/issues"
  },
  "homepage": "https://github.com/dev-senior-com-br/senior-platform-apps-node#readme",
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "axios": "^0.19.2",
    "del-cli": "^3.0.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.3.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "prettier": "2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@seniorsistemas/senior-core": "^1.2.33"
  }
}
